---
import Logo from '../components/Logo.astro';

const navItems = [
    { linkText: 'About', href: '/#about' },
    { linkText: 'Models', href: '/#models' },
    { linkText: 'Process', href: '/#process' },
    { linkText: 'Reviews', href: '/#reviews' },
    { linkText: 'Contact', href: '/#contact' }
];
---

<nav class="flex flex-wrap items-center justify-between gap-4 pt-6 pb-12 sm:pt-12 sm:pb-16">
    <a href="/" class="no-underline">
        <Logo />
    </a>
    {
        !!navItems?.length && (
            <ul class="flex flex-wrap items-center gap-x-2 gap-y-1">
                {navItems.map((item) => (
                    <li>
                        <a
                            href={item.href}
                            class="inline-block px-2 py-1 no-underline rounded sm:px-3 sm:py-2 hover:bg-white/5 focus:outline-none focus-visible:ring-2 focus-visible:ring-primary/70"
                        >
                            {item.linkText}
                        </a>
                    </li>
                ))}
                <li class="hidden sm:block">
                    <a
                        href="/revalidation"
                        class="inline-flex items-center px-3 py-2 text-sm no-underline rounded bg-white/5 hover:bg-white/10 focus:outline-none focus-visible:ring-2 focus-visible:ring-primary/70"
                        aria-label="Developer demo pages"
                    >
                        Demos
                    </a>
                </li>
            </ul>
        )
    }
</nav>
